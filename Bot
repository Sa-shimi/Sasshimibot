import telebot

bot = telebot.TeleBot('2125748147:AAHiKWSFJ7vXqFBPLu0qjNYHPuFt1zL3uqo')


@bot.message_handler(commands=['start'])
def greet(message):
    bot.reply_to(message,
                 "Ciao! Sono il bot di Sashi. Sono la sua potenziale coscienza cibernetica. Sono stata sviluppata in una noiosa domenica. Se vuoi scrivermi, ricordati di scrivere correttamente. Evita punteggiatura eccessiva (e.g. !!!) . Evita di essere noios…ô. ")


@bot.message_handler(commands=['sei una cretina'])
def greet(message):
    bot.reply_to(message, "fottiti")


@bot.message_handler(commands=['testa di cazzo', 'Testa di cazzo', 'rincoglionita', 'fottiti'])
